<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GetIntentActivity">

    <TextView
            android:text="何も受け取っていません"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/message" android:layout_marginTop="112dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp"/>
    <TextView
            android:text="どこのアクティビティにも遷移していません"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/BackMessage" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/message"
            android:textSize="30sp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/BackMessage" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">
        <Button
                android:text="Intent_Delivery_Activity1へ遷移する"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/Intent_Delivery_Activity1"
        />
        <Button
                android:text="Intent_Delivery_Activity2へ遷移する"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/Intent_Delivery_Activity2"/>
        <Button
                android:text="Intent_Delivery_Activity3へ遷移する"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/Intent_Delivery_Activity3"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>